{% extends 'base.html.twig' %}

{% block title %}Detalhes da Fazenda: {{ farm.nome }}{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-tractor text-secondary"></i> Detalhes da Fazenda</h1>
        <div>
            <a href="{{ path('app_farm_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
            <a href="{{ path('app_farm_edit', {'id': farm.id}) }}" class="btn btn-warning">
                <i class="fas fa-pencil-alt"></i> Editar
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header fs-5">
            <strong>{{ farm.nome }}</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="card-title">Informações Gerais</h5>
                    <table class="table table-borderless table-sm">
                        <tbody>
                            <tr>
                                <th style="width: 30%;">Responsável</th>
                                <td>{{ farm.responsavel }}</td>
                            </tr>
                            <tr>
                                <th>Tamanho</th>
                                <td>{{ farm.tamanho|number_format(2, ',', '.') }} Hectares (HA)</td>
                            </tr>
                            <tr>
                                <th>Limite de Animais</th>
                                <td>{{ (farm.tamanho * 18)|round }} ({{ cowsPagination.getTotalItemCount }} atuais)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="col-md-6">
                    <h5 class="card-title">
                        <i class="fas fa-user-md"></i> Veterinários Associados ({{ farm.veterinarios|length }})
                    </h5>
                    {% if farm.veterinarios is not empty %}
                        <ul class="list-group">
                            {% for vet in farm.veterinarios %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    {{ vet.nome }}
                                    <span class="badge bg-primary rounded-pill">{{ vet.crmv }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <div class="alert alert-info" role="alert">
                            Nenhum veterinário associado a esta fazenda.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>


    <div class="card mt-4">
        <div class="card-header fs-5">
            <i class="fas fa-cow"></i> Gado Cadastrado
        </div>
        <div class="card-body">
            
            <div class="mb-3">
                <strong>{{ cowsPagination.getTotalItemCount }}</strong> animais encontrados.
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            
                            <th>{{ knp_pagination_sortable(cowsPagination, 'Código', 'c.codigo') }}</th>
                            <th>{{ knp_pagination_sortable(cowsPagination, 'Nascimento', 'c.nascimento') }}</th>
                            <th>{{ knp_pagination_sortable(cowsPagination, 'Peso', 'c.peso') }}</th>
                            <th>{{ knp_pagination_sortable(cowsPagination, 'Leite', 'c.leite') }}</th>
                            <th>{{ knp_pagination_sortable(cowsPagination, 'Ração', 'c.racao') }}</th>
                            <th>{{ knp_pagination_sortable(cowsPagination, 'Status', 'c.status') }}</th>
                        </tr>
                    </thead>
                    <tbody>

                        {% for cow in cowsPagination %}
                            <tr style="cursor: pointer;" onclick="window.location='{{ path('app_cow_show', {'id': cow.id}) }}';">
                                <td><strong>{{ cow.codigo }}</strong></td>
                                <td>{{ cow.nascimento|date('d/m/Y') }}</td>
                                <td>{{ cow.peso|number_format(2, ',', '.') }} kg</td>
                                <td>{{ cow.leite|number_format(0, ',', '.') }} L</td>
                                <td>{{ cow.racao|number_format(1, ',', '.') }} kg</td>
                                <td>
                                    {% if cow.status == 'vivo' %}
                                        <span class="badge bg-success">Vivo</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Abatido</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    Nenhum animal cadastrado nesta fazenda. <a href="{{ path('app_cow_new', {'farm': farm.id}) }}" class="alert-link">Cadastre o primeiro!</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

           
            <div class="navigation d-flex justify-content-center mt-4">
                {{ knp_pagination_render(cowsPagination, 'pagination/custom_pagination.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}