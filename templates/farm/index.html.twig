{% extends 'base.html.twig' %}

{% block title %}Listagem de Fazendas{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-tractor"></i> Fazendas Cadastradas</h1>
        <a href="{{ path('app_farm_new') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Cadastrar Nova Fazenda
        </a>
    </div>


    <div class="mb-3">
        <strong>{{ pagination.getTotalItemCount }}</strong> fazendas encontradas.
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                   
                    <th>{{ knp_pagination_sortable(pagination, 'ID', 'f.id') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Nome', 'f.nome') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Tamanho (HA)', 'f.tamanho') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Responsável', 'f.responsavel') }}</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
           
            {% for farm in pagination %}
                <tr style="cursor: pointer;" onclick="window.location='{{ path('app_farm_show', {'id': farm.id}) }}';">
                    <td>{{ farm.id }}</td>
                    <td><strong>{{ farm.nome }}</strong></td>
                    <td>{{ farm.tamanho|number_format(2, ',', '.') }}</td>
                    <td>{{ farm.responsavel }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_farm_show', {'id': farm.id}) }}" class="btn btn-info btn-sm" title="Ver Detalhes"> 
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('app_farm_edit', {'id': farm.id}) }}" class="btn btn-warning btn-sm" title="Editar"> 
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center py-4">
                        Nenhuma fazenda encontrada. <a href="{{ path('app_farm_new') }}">Cadastre a primeira!</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

   
    <div class="navigation d-flex justify-content-center mt-4">
        {{ knp_pagination_render(pagination, 'pagination/custom_pagination.html.twig') }}
    </div>
</div>
{% endblock %}