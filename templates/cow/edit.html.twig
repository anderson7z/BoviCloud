{% extends 'base.html.twig' %}

{% block title %}Editar Animal: {{ cow.codigo }}{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Editar Animal <span class="text-muted">#{{ cow.codigo }}</span></h1>
        
        {{ include('cow/_delete_form.html.twig') }}
    </div>

    {{ form_start(form) }}
    <div class="card">
        <div class="card-header">
            Dados do Animal
        </div>
        <div class="card-body">
           
            {{ form_widget(form) }}
        </div>
        <div class="card-footer d-flex justify-content-between">
            
            <a href="{{ path('app_cow_show', {'id': cow.id}) }}" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
           
            <button class="btn btn-primary">
                <i class="fas fa-save"></i> Salvar Alterações
            </button>
        </div>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}