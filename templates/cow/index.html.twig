{% extends 'base.html.twig' %}

{% block title %}Listagem de Gado{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Animais da Fazenda (Vivos)</h1>
            <div>
                <a href="{{ path('app_cow_slaughter_list') }}" class="btn btn-outline-danger">
                    <i class="fas fa-skull-crossbones"></i> Lista para Abate
                </a>
                <a href="{{ path('app_cow_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i> Cadastrar Novo Animal
                </a>
            </div>
        </div>

       
        <div class="mb-3">
            <strong>{{ pagination.getTotalItemCount }}</strong> animais encontrados.
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        
                        <th>{{ knp_pagination_sortable(pagination, 'Código', 'c.codigo') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Fazenda', 'f.nome') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Idade', 'c.nascimento') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Peso', 'c.peso') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Leite', 'c.leite') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Ração', 'c.racao') }}</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>

                {% for cow in pagination %}
                    
                    <tr style="cursor: pointer;" onclick="window.location='{{ path('app_cow_show', {'id': cow.id}) }}';">
                        <td><strong>{{ cow.codigo }}</strong></td>
                        <td>{{ cow.fazenda.nome }}</td>
                        <td>
                            {% set age = date().diff(cow.nascimento) %}
                            {{ age.y }} anos e {{ age.m }} meses
                        </td>
                        <td>{{ cow.peso|number_format(2, ',', '.') }} kg</td>
                        <td>{{ cow.leite|number_format(0, ',', '.') }} L/semana</td>
                        <td>{{ cow.racao|number_format(1, ',', '.') }} kg/semana</td>
                        <td class="text-center">
                           
                            <a href="{{ path('app_cow_show', {'id': cow.id}) }}" class="btn btn-info btn-sm" title="Ver Detalhes">
                                <i class="fas fa-eye"></i>
                            </a>
                            
                           
                        </td>
                    </tr>

                    
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center py-4">
                            Nenhum animal vivo encontrado. <a href="{{ path('app_cow_new') }}">Cadastre o primeiro!</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        
        <div class="navigation d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination, 'pagination/custom_pagination.html.twig') }}
        </div>
    </div>
{% endblock %}