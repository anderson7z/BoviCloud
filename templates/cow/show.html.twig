{% extends 'base.html.twig' %}

{% block title %}Detalhes do Animal: {{ cow.codigo }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-cow text-secondary"></i> Detalhes do Animal</h1>
        <a href="{{ path('app_cow_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Voltar para a Lista
        </a>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center fs-5">
            <strong>Código: {{ cow.codigo }}</strong>
            
            {% if cow.status == constant('App\\Entity\\Cow::STATUS_VIVO') %}
                <span class="badge bg-success">Vivo</span>
            {% elseif cow.status == constant('App\\Entity\\Cow::STATUS_ABATIDO') %}
                <span class="badge bg-warning text-dark">Abatido</span>
            {% endif %}
        </div>
        <div class="card-body">
            <div class="row">
              
                <div class="col-md-6">
                    <h5 class="card-title">Dados de Produção</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Produção de Leite:</strong> {{ cow.leite|number_format(0, ',', '.') }} L/semana
                        </li>
                        <li class="list-group-item">
                            <strong>Consumo de Ração:</strong> {{ cow.racao|number_format(1, ',', '.') }} Kg/semana
                        </li>
                    </ul>
                </div>

               
                <div class="col-md-6">
                    <h5 class="card-title">Dados Físicos</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Peso:</strong> {{ cow.peso|number_format(2, ',', '.') }} Kg
                        </li>
                        <li class="list-group-item">
                            <strong>Nascimento:</strong> {{ cow.nascimento|date('d/m/Y') }}
                        </li>
                        <li class="list-group-item">
                            <strong>Idade:</strong> 
                            {% set age = date().diff(cow.nascimento) %}
                            {{ age.y }} anos e {{ age.m }} meses
                        </li>
                    </ul>
                </div>
            </div>
            
            <hr>
            
            <div class="row mt-3">
                <div class="col">
                    <h5 class="card-title">Localização</h5>
                     <p class="card-text">
                        <strong>Fazenda:</strong> 
                        <a href="{{ path('app_farm_show', {'id': cow.fazenda.id}) }}">{{ cow.fazenda.nome }}</a>
                    </p>
                </div>
            </div>
        </div>
        
        
        {% if cow.status == constant('App\\Entity\\Cow::STATUS_VIVO') %}
        <div class="card-footer text-end">
            
            <div role="group" aria-label="Ações para o animal">

                <a href="{{ path('app_cow_edit', {'id': cow.id}) }}" class="btn btn-primary me-2">
                    <i class="fas fa-pencil-alt"></i> Editar
                </a>

                <a href="{{ path('app_cow_slaughter_list') }}" class="btn btn-outline-danger border-3">
                    <i class="fas fa-skull-crossbones"></i> Lista para Abate
                </a>

               
                <form class="d-inline" method="post" action="{{ path('app_cow_delete', {'id': cow.id}) }}" 
                    onsubmit="return confirm('ATENÇÃO: Deseja apagar permanentemente o registro deste animal? Esta ação não pode ser desfeita.');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cow.id) }}">
                    <button class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Apagar Registro
                    </button>
                </form>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}