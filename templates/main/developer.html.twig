                                    function toggleWhatsApp() {
                                        const numberElement = document.getElementById('whatsappNumber');
                                        numberElement.style.display = numberElement.style.display === 'none' ? 'block' : 'none';
                                    }
                                </script>
                            </div>
                            <a href="https://www.linkedin.com/in/anderson-alves-522788212" target="_blank" class="btn btn-primary" style="background-color: #0e76a8;">
