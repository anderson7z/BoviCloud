{% extends 'base.html.twig' %}

{% block title %}Listagem de Veterinários{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-user-md"></i> Veterinários Cadastrados</h1>
        <a href="{{ path('app_veterinarian_new') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Cadastrar Novo Veterinário
        </a>
    </div>


    <div class="mb-3">
        <strong>{{ pagination.getTotalItemCount }}</strong> veterinários encontrados.
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    
                    <th>{{ knp_pagination_sortable(pagination, 'ID', 'v.id') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Nome', 'v.nome') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'CRMV', 'v.crmv') }}</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>

            {% for veterinarian in pagination %}
                <tr style="cursor: pointer;" onclick="window.location='{{ path('app_veterinarian_show', {'id': veterinarian.id}) }}';">
                    <td>{{ veterinarian.id }}</td>
                    <td><strong>{{ veterinarian.nome }}</strong></td>
                    <td>{{ veterinarian.crmv }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_veterinarian_show', {'id': veterinarian.id}) }}" class="btn btn-info btn-sm" title="Ver Detalhes">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('app_veterinarian_edit', {'id': veterinarian.id}) }}" class="btn btn-warning btn-sm" title="Editar">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center py-4">
                        Nenhum veterinário encontrado. <a href="{{ path('app_veterinarian_new') }}">Cadastre o primeiro!</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    
    <div class="navigation d-flex justify-content-center mt-4">
        {{ knp_pagination_render(pagination, 'pagination/custom_pagination.html.twig') }}
    </div>
</div>
{% endblock %}