{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}BoviCloud - Controle Veterinário de Fazendas{% endblock %}</title>

    <link rel="icon" href="{{ asset('logo.png') }}">
    
    <!-- Dependências Externas (CSS) -->
    <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    {# O bloco 'stylesheets' agora carrega nosso arquivo CSS customizado #}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="page-loader"></div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_main') }}">
                    <img src="{{ asset('logo.png') }}" alt="Logo BoviCloud" width="35" height="35" class="me-2">
                    <span>BoviCloud</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.attributes.get('_route') == 'app_main' ? 'active' : '' }}" href="{{ path('app_main') }}">
                                <i class="fas fa-chart-line"></i> Painel de Controle
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') starts with 'app_veterinarian' ? 'active' : '' }}" href="{{ path('app_veterinarian_index') }}">
                                <i class="fas fa-user-md"></i> Veterinários
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') starts with 'app_farm' ? 'active' : '' }}" href="{{ path('app_farm_index') }}">
                                <i class="fas fa-tractor"></i> Fazendas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') starts with 'app_cow' ? 'active' : '' }}" href="{{ path('app_cow_index') }}">
                                <i class="fas fa-cow"></i> Controle do Gado
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid px-4 flex-grow-1">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    <i class="fas fa-{{ label == 'success' ? 'check-circle' : (label == 'danger' ? 'exclamation-triangle' : (label == 'warning' ? 'exclamation-circle' : 'info-circle')) }} me-2"></i>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </main>

    <footer class="mt-auto py-4">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-6 text-md-start">
                    <p class="mb-0">© {{ "now"|date("Y") }} BoviCloud - Sistema de Controle Veterinário</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>
                        Desenvolvido por Anderson A.Ramos
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Dependências Externas (JS) -->
    <script src="{{ asset('bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    
    {# O bloco 'javascripts' agora carrega nosso arquivo JS customizado #}
    {% block javascripts %}
        <script src="{{ asset('js/script.js') }}" defer></script>
    {% endblock %}

</body>
</html>